<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown_to_html @post.body %></p>
    <p><%= image_tag(@post.image.url) if @post.image? %></p>
    <br>
    <h4> comments </h4>
    <p><%= render partial: 'comments/form', locals: { topic: @topic, post: @post } %>
      <p><%= render @comments %>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "edit", edit_topic_post_path(@topic, @post, @comment), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
