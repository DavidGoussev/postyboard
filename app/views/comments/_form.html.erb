<%= form_for [@post, Comment.new], remote: true do |f| %>

  <% if Comment.new.errors.any? %>
     <div class="alert alert-danger">
       <h4><%= pluralize(Comment.new.errors.count, "error") %>:</h4>
       <ul>
         <% Comment.new.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
  <%= form_group_tag(Comment.new.errors[:body]) do %>

     <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "enter comment" %>
   <% end %>
   <div class="form-group">
     <%= f.submit "submit", class: 'btn btn-success' %>
   </div>
<% end %>
