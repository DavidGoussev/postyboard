<h1>topics</h1>
<br>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @topics %>
  </div>
  <br>
  <div class="col-md-4">
    <% if policy(Topic.new).create? %>
      <%= link_to "new topic", new_topic_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
