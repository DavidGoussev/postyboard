<h1>new question</h1>

<div class="row">
  <div class="col-md-4">
    <p>guidelines for questions</p>
    <ul>
      <li>don't ask stupid questions.</li>
      <li>don't waste anyone's time.</li>
      <li>the incessant use of hashtags will get you banned.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form_group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "enter question title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "enter question body" %>
      </div>
      <div class="form-group">
        <%= f.label :resolved %>
        <%= f.check_box :resolved, class: 'form-control' %>
      </div>
       <div class="form-group">
         <%= f.submit "save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
