<h1>new summary</h1>

  <div class="row">
    <div class="col-md-4">
      <p>guidelines for summaries:</p>
     <ul>
       <li>make sense</li>
       <li>eat your breakfast</li>
       <li>dont screw up</li>
     </ul>
    </div>

    <div class="col-md-8">
      <%= form_for [@topic, @post, @summary] do |f| %>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', placeholder: "enter post summary" %>
        </div>
        <div class="form-group">
          <%= f.submit "save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

  </div>
